@model IEnumerable<Bakery2018.Models.Person>
@{
    ViewBag.Title = "Index";
}

<h2>People</h2>
<p>@Html.ActionLink("Register", "Register")</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.PersonLastName)</th>
        <th>@Html.DisplayNameFor(model => model.PersonFirstName)</th>
        <th>@Html.DisplayNameFor(model => model.PersonEmail)</th>
        <th>@Html.DisplayNameFor(model => model.PersonPhone)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.PersonLastName)</td>
            <td>@Html.DisplayFor(model => item.PersonFirstName)</td>
            <td>@Html.DisplayFor(model => item.PersonEmail)</td>
            <td>@Html.DisplayFor(model => item.PersonPhone)</td>
        </tr>
    }
</table>